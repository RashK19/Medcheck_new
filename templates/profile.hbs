<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - MedCheck</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #0077b6;
            padding: 10px;
            height: 80px;
        }
        .navbar-brand img {
            height: 40px;
        }
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            border: none;
            background-color: #ffffff;
            padding: 30px;
        }
        .btn-primary {
            background-color: #0077b6;
            border-color: #0077b6;
        }
        .btn-primary:hover {
            background-color: #00b4d8;
            border-color: #00b4d8;
        }
        .text-primary {
            color: #0077b6 !important;
        }
        .profile-section {
            margin-top: 30px;
        }
        .profile-section h3 {
            margin-bottom: 20px;
        }
        .profile-info {
            margin-bottom: 20px;
        }
        .profile-info label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Medcheck</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/login/tests">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="feedback">Feedback</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="Badges">Badges</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Profile Section -->
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="row w-100">
            <!-- Profile Info -->
            <div class="col-12 d-flex justify-content-center">
                <div class="card" style="width: 600px;">
                    <h2 class="text-center text-primary mb-4">User Profile</h2>
                    <div class="profile-section">
                        <!-- Name -->
                        <div class="profile-info">
                            <label for="name">Full Name:</label>
                            <p id="name">John Doe</p>
                        </div>
                        <!-- Email -->
                        <div class="profile-info">
                            <label for="email">Email:</label>
                            <p id="email">johndoe@example.com</p>
                        </div>
                        <!-- Date of Birth -->
                        <div class="profile-info">
                            <label for="dob">Date of Birth:</label>
                            <p id="dob">1990-01-01</p>
                        </div>
                        <!-- Gender -->
                        <div class="profile-info">
                            <label for="gender">Gender:</label>
                            <p id="gender">Male</p>
                        </div>
                        <!-- Phone Number -->
                        <div class="profile-info">
                            <label for="contact">Phone Number:</label>
                            <p id="contact">+1 234 567 890</p>
                        </div>
                        <!-- Medical History -->
                        <div class="profile-info">
                            <label for="medicalHistory">Medical History:</label>
                            <p id="medicalHistory">No known medical conditions.</p>
                        </div>
                    </div>

                    <!-- Update Button -->
                    <div class="d-flex justify-content-center mt-4">
                        <a href="update-profile" class="btn btn-primary w-50">Update Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Replace this with the logged-in user's email
        const loggedInUserEmail = "rashmi.9104r@gmail.com";
    
        // Fetch user profile data from the backend
        fetch(`http://localhost:5000/api/profile?email=${loggedInUserEmail}`)
            .then((response) => {
                if (!response.ok) {
                    throw new Error('User not found');
                }
                return response.json();
            })
            .then((data) => {
                // Populate profile fields
                document.getElementById('name').innerText = data.name;
                document.getElementById('email').innerText = data.email;
                document.getElementById('dob').innerText = data.dob;
                document.getElementById('gender').innerText = data.gender;
                document.getElementById('contact').innerText = data.contact;
                document.getElementById('medicalHistory').innerText = data.medicalHistory;
            })
            .catch((error) => {
                console.error('Error fetching profile data:', error);
                alert('Could not load profile data.');
            });
    </script>
    

</body>
</html>
